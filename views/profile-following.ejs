<%- include('includes/header') %>

<div class="container py-md-5 container--narrow">

    <%- include('includes/flash')%>

    <%- include('includes/profileShared') %>

    <div class="list-group">
        <% following.forEach(function(singleFollowing) { %>

            <a href="/profile/<%= singleFollowing.username %>" class="list-group-item list-group-item-action">
                <img class="avatar-tiny" src="<%= singleFollowing.avatar %>">
                <%= singleFollowing.username %>
            </a>
       <% }) %>
    </div>
</div>

<%- include('includes/footer') %>